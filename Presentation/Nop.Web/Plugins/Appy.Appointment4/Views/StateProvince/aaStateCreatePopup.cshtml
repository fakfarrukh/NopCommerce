@using Nop.Web.Areas.Admin.Models.Directory
@using Nop.Web.Framework.Models.DataTables
@using Nop.Web.Framework.Mvc.Razor
@using Nop.Web.Framework.Infrastructure
@model StateProvinceModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.PageTitle = "AddNew";//("Admin.Configuration.Countries.States.AddNew").Text;
}

<form asp-controller="Country" asp-action="aaStateCreatePopup"
      asp-route-countryId="@Context.Request.Query["countryId"]"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="float-left">
            AddNew
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Save
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.CountryStateDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Appy.Appointment4/Views/StateProvince/_CreateOrUpdateaaState.cshtml", Model)
    
</form>