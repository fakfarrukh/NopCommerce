
@{
    Layout = "~/Plugins/Appy.Appointment4/Views/Shared/_PluginLayout.cshtml";
}

@(
Html.DevExtreme().DataGrid<Nop.Plugin.Appy.Appointment4.Domain.aaInsuranceCompany>()
    .ID("gridContainerInsuranceCompany").
    DataSource(d => d.WebApi()
                    .Controller("InsuranceCompanies")
                    .LoadAction("aaLoadInsuranceCompany")
                    .InsertAction("aaInsertInsuranceCompany")
                    .UpdateAction("aaUpdateInsuranceCompany")
                    .DeleteAction("aaDeleteInsuranceCompany")
                    .Key("Id")
                )
    .ShowBorders(true)
    .Paging(paging => paging.Enabled(false))
    .Editing(editing =>
    {
        editing.Mode(GridEditMode.Row);
        editing.AllowAdding(true);
        editing.AllowDeleting(true);
        editing.AllowUpdating(true);
    })
    .Columns(columns =>
    {
        columns.AddFor(m => m.InsuranceEnglishName).Caption("English Name");
        columns.AddFor(m => m.InsuranceArabicName).Caption("Arabic Name").Alignment(HorizontalAlignment.Right); ;


    })
)

